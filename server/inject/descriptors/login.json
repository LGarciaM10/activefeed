{
  "type": "object",
  "comment": "Login",
  "properties": {
    "islogin": {
      "type": "identifier",
      "selector": "body",
      "control": "exists"
    },
    "username": {
      "type": "string",
      "selector": "input[name='username']",
      "control": "text"
    },
    "password": {
      "type": "string"
    },
    "errorMessage": {
      "type": "string"
    },
    "submit": {
      "type": "action"
    }
  },
  "connect": [
    {
      "match": [
        "islogin"
      ],
      "screens": [
        "login"
      ]
    }
  ]
}
